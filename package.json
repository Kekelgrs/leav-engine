{
    "name": "leav_core",
    "version": "1.0.0",
    "description": "",
    "main": "build/index.js",
    "scripts": {
        "start:watch": "onchange -i 'src/**/*.ts'  -- npm run start:dev",
        "start:dev": "ts-node --type-check src/",
        "start:build": "tsc && node .",
        "test:watch": "jest -c jest-unit-config.json --watch",
        "test": "jest -c jest-unit-config.json",
        "test:e2e": "jest -c jest-e2e-config.json",
        "lint": "tslint --fix -p .",
        "lint:watch": "watch 'npm run lint' src/",
        "prettier": "prettier --write 'src/**/*.ts'",
        "dev": "run-p lint:watch start:watch test:watch",
        "precommit": "lint-staged && npm test",
        "db:migrate": "tsc && node . --migrate"
    },
    "repository": {
        "type": "git",
        "url": "git+https://Jerome_MILLOT@bitbucket.org/leav_ca/leav_core.git"
    },
    "author": "",
    "license": "ISC",
    "homepage": "https://bitbucket.org/leav_ca/leav_core#readme",
    "devDependencies": {
        "@types/debug": "0.0.30",
        "@types/glob": "^5.0.35",
        "@types/graphql": "^0.13.0",
        "@types/hapi": "^17.0.9",
        "@types/hapi-auth-jwt2": "^8.0.0",
        "@types/jest": "^22.2.2",
        "@types/lodash": "^4.14.106",
        "@types/node": "^7.0.60",
        "@types/winston": "^2.3.9",
        "axios": "^0.18.0",
        "husky": "^0.14.3",
        "jest": "^22.4.3",
        "lint-staged": "^7.0.4",
        "nodemon": "^1.17.3",
        "npm-run-all": "^4.1.2",
        "onchange": "^3.3.0",
        "prettier": "^1.11.1",
        "ts-jest": "^22.4.2",
        "ts-node": "^5.0.1",
        "tslint": "^5.9.1",
        "tslint-eslint-rules": "^5.1.0",
        "typescript": "^2.8.3",
        "watch": "^1.0.2"
    },
    "dependencies": {
        "apollo-server-core": "^1.3.4",
        "apollo-server-hapi": "^1.3.4",
        "arangojs": "^6.2.3",
        "awilix": "^3.0.7",
        "bcrypt": "^2.0.1",
        "boom": "^7.2.0",
        "graphql": "^0.13.2",
        "graphql-errors": "^2.1.0",
        "graphql-extensions": "0.0.10",
        "graphql-tools": "^2.23.1",
        "hapi": "^17.3.1",
        "hapi-auth-jwt2": "^8.1.0",
        "joi": "^13.3.0",
        "jsonwebtoken": "^8.2.1",
        "lodash": "^4.17.5",
        "moment": "^2.22.0",
        "winston": "^2.4.1",
        "winston-transport": "^3.1.0"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "tslint --fix",
            "git add"
        ]
    }
}
